<?xml version="1.0" encoding="UTF-8"?>
<!--Format:
name   => name of the animation sequence
start  => starting frame
end    => ending frame
loop   => looping animation (default)
-->
<animation name="megaman">
    <sequence name="hit"          start="0"  end="1"  loop="true"  />
    <sequence name="jump"         start="2"  end="2"  loop="false" />
    <sequence name="jump-shoot"   start="3"  end="3"  loop="false" />
    <sequence name="run-shoot"    start="4"  end="6"  loop="true"  />
    <sequence name="shoot"        start="7"  end="7"  loop="false" />
    <sequence name="stairs"       start="8"  end="9"  loop="true"  />
    <sequence name="stairs-top"   start="10" end="10" loop="false" />
    <sequence name="stairs-shoot" start="11" end="11" loop="false" />
    <sequence name="idle"         start="12" end="13" loop="true"  />
    <sequence name="run"          start="14" end="16" loop="true"  />
</animation>
